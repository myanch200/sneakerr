<%= turbo_frame_tag @cart do%>
    <details class="relative cursor-pointer z-50">
      <summary>
        <%= number_to_currency(@cart.total_price) %>
      </summary>
      <div class="absolute right-0 w-96 p-2 bg-white shadow-md rounded-b-lg">
        <div class="divide-y divide-gray-300 p-2">
          <%= render  @cart.line_items %>
        </div>
        <div class="flex justify-between font-black border-t-2 border-gray-500 p-2">
          <span class="">Subtotal:</span>
          <span><%= number_to_currency(@cart.total_price) %></span>
        </div>
      </div>
    </details>
<% end %>