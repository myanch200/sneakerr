<div class="block">
  <h1>Apples counter</h1>
  <div id="count">

    <h1 class="font-bold"> Apples: <%= @count %></h1>
  </div>
  <div class="flex gap-5 mt-5">
    <%= button_to 'Add', add_path, class: 'p-2 bg-blue-500 text-blue-200 rounded-md' %>
    <%= button_to 'Remove', remove_path, class: 'p-2 bg-red-500 text-red-200 rounded-md' %>
  </div>

  <div id="log" class="mt-5">
    This is the log
  </div>
</div>
